<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="@color/grey">

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="0.4"
           android:orientation="vertical"
           >
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="5"
              android:gravity="center"
              android:textColor="@color/white"
              android:enabled="false"
              android:layout_marginTop="@dimen/spacing_normal_16"
              android:focusable="false"
              />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Рейтинг"
               android:gravity="center"
               android:textColor="@color/white"
               android:enabled="false"
               android:focusable="false"
               />
       </LinearLayout>
        <View
            android:background="@color/grey_light"
            android:layout_width = "1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_normal_16"/>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:textColor="@color/white"
                android:enabled="false"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:focusable="false"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Написано строк кода"
                android:gravity="center"
                android:textColor="@color/white"
                android:enabled="false"
                android:focusable="false"
                />
        </LinearLayout>

        <View
            android:background="@color/grey_light"
            android:layout_width = "1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_normal_16"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:orientation="vertical"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:textColor="@color/white"
                android:enabled="false"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:focusable="false"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Рейтинг"
                android:gravity="center"
                android:textColor="@color/white"
                android:enabled="false"
                android:focusable="false"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_phone_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/phone_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:fontFamily="sans-serif-light"
                    android:hint="Мобильный телефон"
                    android:inputType="phone"
                    android:text="+7(978)-035-52-77"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textStyle="bold"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="@dimen/spacing_large_72"
        android:background="@color/grey_light"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/mail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusable="false"
                    android:fontFamily="sans-serif-light"
                    android:hint="Электронный адресс"
                    android:inputType="textEmailAddress"
                    android:text="yaroslav-tokar@yandex.ru"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textStyle="bold"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="@dimen/spacing_large_72"
        android:background="@color/grey_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/vk"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/vk_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:fontFamily="sans-serif-light"
                    android:hint="Профиль в VK"
                    android:inputType="phone"
                    android:text="vk.com/yarick_t"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textStyle="bold"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="@dimen/spacing_large_72"
        android:background="@color/grey_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/github_box"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/git_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:fontFamily="sans-serif-light"
                    android:hint="Репозиторий"
                    android:inputType="phone"
                    android:text="github.com/pr0xy-TNU"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textStyle="bold"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="@dimen/spacing_large_72"
        android:background="@color/grey_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:orientation="horizontal"
        >

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/information_outline"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_big_72"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:fontFamily="sans-serif-light"
                    android:hint="О себе"
                    android:inputType="phone"
                    android:text="+7(979)-777-77-77"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="@dimen/spacing_large_72"
        android:background="@color/grey_light"
        />


</LinearLayout>
